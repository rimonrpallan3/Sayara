<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--Meters and Money Display-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/fareToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/highLightText"
            android:elevation="@dimen/_04"
            android:theme="@style/WhiteDrawerIconStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60"
            android:visibility="visible"
            android:weightSum="100">

            <TextView
                android:id="@+id/fairDistKm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="49.5"
                android:background="@color/black"
                android:gravity="center"
                android:text="4.5 Kms"
                android:textColor="@color/highLightText"
                android:textSize="@dimen/_18" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_60"
                android:layout_weight="0.5"
                android:background="@color/highLightText" />

            <TextView
                android:id="@+id/fairCost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:background="@color/black"
                android:gravity="center"
                android:text="8 BD"
                android:textColor="@color/highLightText"
                android:textSize="@dimen/_18" />
        </LinearLayout>

        <!--Pick and drop Description-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150"
            android:orientation="horizontal"
            android:visibility="visible">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_20">

                <ImageView
                    android:layout_width="@dimen/_20"
                    android:layout_height="@dimen/_20"
                    android:layout_gravity="top"
                    android:src="@drawable/radio_bttn_orange" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_60"
                    android:layout_marginLeft="@dimen/_10"
                    android:layout_marginTop="@dimen/_10"
                    android:background="@color/highLightText" />

                <ImageView
                    android:layout_width="@dimen/_20"
                    android:layout_height="@dimen/_20"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_40"
                    android:src="@drawable/radio_bttn_grey" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/_20"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/startOrgin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_08"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <TextView
                            android:id="@+id/startAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_04"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Sub Title 1"
                            android:textSize="@dimen/_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <TextView
                            android:id="@+id/startDistanceKm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Distance"
                            android:textSize="@dimen/_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/pickCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:textSize="@dimen/_10" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/endDestin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_08"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/endAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_04"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Sub Title 1"
                            android:textSize="@dimen/_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/endDistanceKm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Distance"
                            android:textSize="@dimen/_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/pickCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:textSize="@dimen/_10" />

                    </LinearLayout>


                </LinearLayout>

            </FrameLayout>


        </LinearLayout>

        <!-- Accept\Reject class and payment method-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_40"
                android:layout_marginLeft="@dimen/_60"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/_18"
                android:text="Sayara Diamond Class"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_60"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Payment Method"
                android:layout_marginBottom="@dimen/_10"
                android:textColor="@color/black" />




                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_04"
                    app:cardElevation="@dimen/_10"
                    android:layout_marginLeft="@dimen/_10"
                    android:layout_marginRight="@dimen/_10">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100"
                        android:orientation="horizontal"
                        android:weightSum="100">

                    <LinearLayout
                        android:id="@+id/callDriver"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/_40"
                            android:layout_height="@dimen/_40"
                            android:layout_marginBottom="@dimen/_10"
                            android:src="@drawable/pay_online"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pay online"/>


                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/divider_line"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/showLandMark"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/_40"
                            android:layout_height="@dimen/_40"
                            android:layout_marginBottom="@dimen/_10"
                            android:src="@drawable/pay_by_cash"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pay By Cash"/>


                    </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="20dp"
                    android:weightSum="100">

                    <Button
                        android:id="@+id/btnAccept"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="50"
                        android:textAllCaps="false"
                        android:background="@drawable/rectangle_button"
                        android:text="@string/accept_txt"
                        android:textColor="#FFF" />

                    <Button
                        android:id="@+id/btnReject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="50"
                        android:textAllCaps="false"
                        android:background="@drawable/rectangle_button"
                        android:text="@string/reject_txt"
                        android:textColor="#FFF" />

                </LinearLayout>
            </FrameLayout>


        </LinearLayout>


    </LinearLayout>

</ScrollView>
