<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_gravity="right"
    android:elevation="@dimen/_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30"
        android:gravity="right|center"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/markerIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10"
                android:layout_marginRight="@dimen/_10"
                android:src="@drawable/location_pointer_icons_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@color/bag_marker_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10"
                android:layout_marginRight="@dimen/_10"
                android:src="@drawable/map_pointer_white_32" />
        </LinearLayout>


        <TextView
            android:id="@+id/locationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10"
            android:layout_marginRight="@dimen/_10"
            android:background="@color/white"
            android:layout_weight="60"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Enakulam"
            android:textSize="@dimen/_10" />

    </LinearLayout>

</LinearLayout>