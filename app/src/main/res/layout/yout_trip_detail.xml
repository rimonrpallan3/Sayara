<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/YTDToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/highLightText"
        android:elevation="@dimen/_04"
        android:theme="@style/WhiteDrawerIconStyle" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/mapYTD"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20"
                    android:layout_marginRight="@dimen/_20"
                    android:layout_marginTop="@dimen/_12">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/YTDDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yesterday" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" at " />

                        <TextView
                            android:id="@+id/YTDTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11.00 AM" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BD " />

                        <TextView
                            android:id="@+id/YTDDBAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 57" />

                    </LinearLayout>


                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20"
                    android:layout_marginLeft="@dimen/_20"
                    android:layout_marginRight="@dimen/_20"
                    android:layout_marginTop="@dimen/_10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/YTDCarName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tata Indigo" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/YTDPaymentMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash  " />

                    </LinearLayout>


                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20"
                    android:layout_marginRight="@dimen/_20">

                    <ImageView
                        android:layout_width="@dimen/_10"
                        android:layout_height="@dimen/_10"
                        android:layout_gravity="center|left"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="@dimen/_04"
                        android:src="@drawable/circle_bkgrnd" />

                    <TextView
                        android:id="@+id/YTDSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_30"
                        android:layout_marginTop="@dimen/_04"
                        android:ellipsize="end"
                        android:text="Riffa Sports Club, Ar-Rifaa, Bahrain" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20"
                    android:layout_marginRight="@dimen/_20">

                    <ImageView
                        android:layout_width="@dimen/_10"
                        android:layout_height="@dimen/_10"
                        android:layout_gravity="left|center"
                        android:src="@drawable/square_bkgrnd" />

                    <TextView
                        android:id="@+id/YTDDestination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_30"
                        android:layout_marginTop="@dimen/_04"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:minLines="2"
                        android:text="Bahrain Defence Force Hospital, Ar-Rifaa, Bahrain" />

                </FrameLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20"
                android:background="@color/divider_line" />

            <LinearLayout
                android:id="@+id/YTD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_06"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/YTDDriverProfileCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_04"
                    app:cardElevation="@dimen/_10">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10"
                        android:layout_marginLeft="@dimen/_20"
                        android:layout_marginRight="@dimen/_20"
                        android:layout_marginTop="@dimen/_10">

                        <com.voyager.sayara.costom.CircleImageView
                            android:id="@+id/YTDDriverProfileImg"
                            android:layout_width="@dimen/_40"
                            android:layout_height="@dimen/_40"
                            android:src="@drawable/profile" />

                        <TextView
                            android:id="@+id/YTDDriverName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_60"
                            android:layout_marginTop="@dimen/_08"
                            android:text="@string/accept_txt" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_08"
                            android:gravity="right">

                            <ImageView
                                android:id="@+id/YTDStar1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_04"
                                android:layout_marginRight="@dimen/_04"
                                android:src="@drawable/star" />

                            <ImageView
                                android:id="@+id/YTDStar2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_04"
                                android:src="@drawable/star" />

                            <ImageView
                                android:id="@+id/YTDStar3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_04"
                                android:src="@drawable/star" />

                            <ImageView
                                android:id="@+id/YTDStar4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/star" />


                        </LinearLayout>

                    </FrameLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40"
                android:background="@color/heading_text_background_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_30"
                    android:gravity="center"
                    android:text="@string/heading_text_receipt"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20"
                        android:layout_marginRight="@dimen/_20"
                        android:layout_marginTop="@dimen/_18">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Trip Fair" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_30"
                            android:gravity="right"
                            android:text="BD" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="20" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20"
                        android:layout_marginRight="@dimen/_20"
                        android:layout_marginTop="@dimen/_18">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Sub Total" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_30"
                            android:gravity="right"
                            android:text="BD" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="20" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20"
                        android:layout_marginRight="@dimen/_20"
                        android:layout_marginTop="@dimen/_18">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Total" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_30"
                            android:gravity="right"
                            android:text="BD" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="20" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_0.5"
                            android:layout_marginTop="@dimen/_20"
                            android:background="@color/divider_line" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_30"
                        android:layout_marginLeft="@dimen/_20"
                        android:layout_marginRight="@dimen/_20"
                        android:layout_marginTop="@dimen/_18">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gold_coins" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_30"
                            android:text="Cash"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_30"
                            android:gravity="right"
                            android:text="BD"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="20"
                            android:textStyle="bold" />

                    </FrameLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>