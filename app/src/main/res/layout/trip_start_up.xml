<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutOnTripStartUp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:gravity="bottom"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/driverHeaderLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15"
            android:orientation="horizontal">

            <com.voyager.sayara.costom.CircleImageView
                android:id="@+id/driverCircleImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/profile" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/driverName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Heading name " />

                            <TextView
                                android:id="@+id/driverRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10"
                                android:text="rate" />

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10"
                                android:src="@drawable/star" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/carName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SubHeading name "
                            tools:layout_editor_absoluteX="104dp"
                            tools:layout_editor_absoluteY="63dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10"
                        android:layout_marginRight="@dimen/_10"
                        android:gravity="center"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="@dimen/_90"
                            android:layout_height="@dimen/_50"
                            android:layout_marginBottom="@dimen/_04"
                            android:layout_marginLeft="@dimen/_10"
                            android:layout_marginRight="@dimen/_10"
                            android:layout_marginTop="@dimen/_08"
                            android:alpha="1"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/_10"
                            android:paddingTop="@dimen/_10"
                            app:cardElevation="@dimen/_04">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/driverCity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="country" />

                                <TextView
                                    android:id="@+id/carNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="carNo" />

                            </LinearLayout>


                        </android.support.v7.widget.CardView>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/driverBodyLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_15"
            android:background="@color/divider_dark_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/layoutDriverWaiting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80"
                android:layout_gravity="center"
                android:alpha="3"
                android:visibility="visible"
                android:background="@drawable/boder_black"
                android:elevation="@dimen/_04"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">


                <LinearLayout
                    android:id="@+id/layoutTripSupportCall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="49.7"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgTripSupportCall"
                        android:layout_width="@dimen/_30"
                        android:layout_height="@dimen/_30"
                        android:layout_marginTop="@dimen/_08"
                        android:src="@drawable/phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_04"
                        android:layout_marginTop="@dimen/_04"
                        android:gravity="center"
                        android:text="Call"
                        android:textColor="@color/iconColor" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:background="@color/divider_line" />

                <LinearLayout
                    android:id="@+id/layoutTripCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="49.7"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgTripOnStartCancel"
                        android:layout_width="@dimen/_30"
                        android:layout_height="@dimen/_30"
                        android:layout_marginTop="@dimen/_08"
                        android:src="@drawable/phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_04"
                        android:layout_marginTop="@dimen/_04"
                        android:text="@string/Cancel"
                        android:textColor="@color/red" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTripOngoing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20"
                android:alpha="3"
                android:background="@drawable/boder_black"
                android:visibility="gone"
                android:elevation="@dimen/_04"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:id="@+id/layoutTripCustomerCallOngoing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="33.13"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgTripOngoingCustomer"
                        android:layout_width="@dimen/_30"
                        android:layout_height="@dimen/_30"
                        android:layout_marginTop="@dimen/_08"
                        android:src="@drawable/phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_08"
                        android:text="Customer"
                        android:textColor="@color/iconColor" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:background="@color/divider_dark_gray" />

                <LinearLayout
                    android:id="@+id/layoutTripEmergencyCallOngoing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="33.13"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgTripOngoingSupport"
                        android:layout_width="@dimen/_30"
                        android:layout_height="@dimen/_30"
                        android:layout_marginTop="@dimen/_08"
                        android:src="@drawable/phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_08"
                        android:text="Emergency"
                        android:textColor="@color/red" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:background="@color/divider_dark_gray" />

                <LinearLayout
                    android:id="@+id/layoutTripCancelOngoing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="33.13"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgTripOngoingCancel"
                        android:layout_width="@dimen/_30"
                        android:layout_height="@dimen/_30"
                        android:layout_marginTop="@dimen/_08"
                        android:src="@drawable/phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_08"
                        android:text="@string/Cancel"
                        android:textColor="@color/red" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20"
                android:layout_marginRight="@dimen/_20"
                android:layout_marginTop="@dimen/_20"
                android:text="Your Current Trip Details" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20"
                android:orientation="horizontal"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_80"
                    android:layout_marginLeft="@dimen/_20"
                    android:layout_marginRight="@dimen/_20">

                    <ImageView
                        android:layout_width="@dimen/_20"
                        android:layout_height="@dimen/_20"
                        android:layout_gravity="top"
                        android:src="@drawable/starting_point" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_27"
                        android:layout_marginBottom="@dimen/_60"
                        android:layout_marginLeft="@dimen/_10"
                        android:layout_marginTop="@dimen/_20"
                        android:background="@color/highLightText" />

                    <ImageView
                        android:layout_width="@dimen/_20"
                        android:layout_height="@dimen/_20"
                        android:layout_marginTop="@dimen/_40"
                        android:src="@drawable/map_marker" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tripStartOrgin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_08"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Title"
                            android:textSize="@dimen/_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tripEndDestin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_08"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Title"
                            android:textSize="@dimen/_12" />

                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_line" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20"
            android:layout_marginTop="@dimen/_20"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_24">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Entimated cash to be paid" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_08"
                        android:text="BD" />

                    <TextView
                        android:id="@+id/tripAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="110.000" />

                </LinearLayout>


            </FrameLayout>


        </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>

