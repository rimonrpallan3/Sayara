<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15"
            android:orientation="horizontal">

            <com.voyager.sayara.costom.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/profile" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Heading name " />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_marginLeft="@dimen/_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="rate"/>

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_marginLeft="@dimen/_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/star" />

                        </LinearLayout>




                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SubHeading name "
                            tools:layout_editor_absoluteX="104dp"
                            tools:layout_editor_absoluteY="63dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10"
                        android:layout_marginRight="@dimen/_10"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="@dimen/_90"
                            android:layout_height="@dimen/_50"
                            android:paddingTop="@dimen/_10"
                            android:paddingBottom="@dimen/_10"
                            android:layout_marginBottom="@dimen/_04"
                            android:layout_marginLeft="@dimen/_10"
                            android:layout_marginRight="@dimen/_10"
                            android:layout_marginTop="@dimen/_08"
                            android:alpha="1"
                            android:orientation="horizontal"
                            app:cardElevation="@dimen/_04">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="country" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="carNo" />

                            </LinearLayout>


                        </android.support.v7.widget.CardView>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_15"
            android:background="@color/divider_dark_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/boder_black"
            android:alpha="3"
            android:elevation="@dimen/_04"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="49.7"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30"
                    android:layout_height="@dimen/_30"
                    android:layout_marginTop="@dimen/_08"
                    android:src="@drawable/phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_08"

                    android:text="support" />


            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:background="@color/divider_line"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="49.7"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/_30"
                    android:layout_height="@dimen/_30"
                    android:layout_marginTop="@dimen/_08"
                    android:src="@drawable/phone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_08"
                    android:text="@string/Cancel"/>


            </LinearLayout>


        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20"
                android:layout_marginRight="@dimen/_20"
                android:layout_marginLeft="@dimen/_20"
                android:text="Your Current Trip Details"/>
            


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20"
            android:orientation="horizontal"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_80"
                android:layout_marginLeft="@dimen/_20"
                android:layout_marginRight="@dimen/_20">

                <ImageView
                    android:layout_width="@dimen/_20"
                    android:layout_height="@dimen/_20"
                    android:layout_gravity="top"
                    android:src="@drawable/starting_point_dull_small" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="@dimen/_27"
                    android:layout_marginBottom="@dimen/_60"
                    android:layout_marginLeft="@dimen/_10"
                    android:layout_marginTop="@dimen/_20"
                    android:background="@color/highLightText" />

                <ImageView
                    android:layout_width="@dimen/_20"
                    android:layout_height="@dimen/_20"
                    android:layout_marginTop="@dimen/_40"
                    android:src="@drawable/map_marker_small" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tripStartOrgin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_08"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Title"
                        android:textSize="@dimen/_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_40">

                    <TextView
                        android:id="@+id/tripEndDestin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_08"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Title"
                        android:textSize="@dimen/_12" />

                </LinearLayout>

            </FrameLayout>


        </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_line"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20"
            android:layout_marginLeft="@dimen/_20"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Entimated cash to be paid"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_08"
                        android:text="BD"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="110.000"/>

                </LinearLayout>






            </FrameLayout>





        </LinearLayout>


    </LinearLayout>






</FrameLayout>