<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tripHistoryToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/highLightText"
        android:elevation="@dimen/_04"
        android:theme="@style/WhiteDrawerIconStyle" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loaderImageView"
        android:layout_width="@dimen/_50"
        android:layout_height="@dimen/_20"
        android:layout_marginTop="@dimen/_10"
        android:layout_gravity="center"
        android:src="@drawable/gallery_gif_loader"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tripRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    </FrameLayout>



</LinearLayout>